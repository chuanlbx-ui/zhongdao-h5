# 开发环境配置
NODE_ENV=development

# API配置
VITE_API_BASE_URL=http://127.0.0.1:3000
VITE_API_TIMEOUT=10000
VITE_DEBUG=true
VITE_SMS_API_KEY=your_sms_api_key_here

# 第三方短信服务商配置
VITE_SMS_PROVIDER=aliyun  # 支持的提供商: aliyun, tencent, sendcloud

# 阿里云短信配置
VITE_ALIYUN_ACCESS_KEY_ID=your_aliyun_access_key_id
VITE_ALIYUN_ACCESS_KEY_SECRET=your_aliyun_access_key_secret
VITE_ALIYUN_SIGN_NAME=中道商城
VITE_ALIYUN_TEMPLATE_CODE_LOGIN=SMS_123456789
VITE_ALIYUN_TEMPLATE_CODE_REGISTER=SMS_987654321

# 腾讯云短信配置
VITE_TENCENT_SECRET_ID=your_tencent_secret_id
VITE_TENCENT_SECRET_KEY=your_tencent_secret_key
VITE_TENCENT_APP_ID=123456789
VITE_TENCENT_SIGN_NAME=中道商城
VITE_TENCENT_TEMPLATE_ID_LOGIN=123456
VITE_TENCENT_TEMPLATE_ID_REGISTER=654321

# 调试配置
VITE_ENABLE_MOCK_SMS=true
VITE_DEBUG_SMS=true
